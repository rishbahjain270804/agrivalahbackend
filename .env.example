# Server Configuration
PORT=3002
NODE_ENV=production

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=CHANGE_THIS_TO_RANDOM_32_CHAR_STRING
JWT_EXPIRES_IN=7d
JWT_COOKIE_NAME=nf_token
JWT_COOKIE_MAX_AGE_DAYS=7

# Admin Credentials
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD

# Password Hashing
BCRYPT_ROUNDS=12

# Razorpay Payment Gateway
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Twilio SMS/OTP Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_MESSAGING_SERVICE_SID=your_messaging_service_sid
TWILIO_SMS_FROM=+1234567890
TWILIO_VERIFY_SERVICE_SID=your_verify_service_sid

# OTP Configuration
OTP_EXPIRY_MINUTES=5
OTP_LENGTH=4
OTP_RESEND_COOLDOWN_SECONDS=60
OTP_SESSION_TTL_MINUTES=30

# Test Referral Code (Optional)
TEST_REFERRAL_CODE=testcode123
